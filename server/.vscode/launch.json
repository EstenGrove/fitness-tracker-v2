{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Hono (tsx)",
			"runtimeExecutable": "node",
			"runtimeArgs": [
				"--inspect",
				"--env-file=.env",
				"./node_modules/tsx/dist/cli.js",
				"watch",
				"src/index.ts"
			],
			"cwd": "${workspaceFolder}/server",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"sourceMaps": true,
			"env": {
				"NODE_ENV": "development"
			}
		}
	]
}
